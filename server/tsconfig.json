{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "paths":{
      "@test-utils/*":["src/test-utils/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }
}
